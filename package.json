{
  "name": "node-architecture-boilerplate",
  "version": "0.1.0",
  "description": "nodejs Boilerplate showcasing the DDD architecture approach",
  "main": "./src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server.ts",
    "start:dev-env": "docker-compose -f docker-compose.dev.yaml up -d",
    "stop:dev-env": "docker-compose -f docker-compose.dev.yaml down",
    "start": "NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "tsc": "tsc",
    "prettier": "prettier --list-different './src/**/*.ts'",
    "clean": "rimraf dist",
    "test": "jest",
    "depcheck": "./node_modules/.bin/npm-check",
    "lint": "eslint src --ext .ts"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Mustafa Hussain",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "4.17.1",
    "express-validator": "^6.11.1",
    "mongoose": "^5.12.12",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.6.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.3",
    "npm-check": "^5.9.2",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  }
}
